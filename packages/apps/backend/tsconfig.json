{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020"],
    "module": "NodeNext",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "outDir": "dist",

    /* Bundler mode */
    "moduleResolution": "NodeNext",
    "allowImportingTsExtensions": false,
    "isolatedModules": true,
    "moduleDetection": "force"
  },
  "include": ["src/**/*.ts"]
}
